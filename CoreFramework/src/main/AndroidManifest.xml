<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application>

        <provider
            android:name=".framework.app.message.provider.ContentProviderImpl"
            android:authorities="${applicationId}.proxy_share_data_provider"
            android:exported="true"
            android:grantUriPermissions="true" />

        <provider
            android:name=".framework.io.uri.ProxyProvider"
            android:authorities="${applicationId}.proxy_share_file_provider"
            android:exported="true"
            android:grantUriPermissions="true" />

        <receiver
            android:name=".framework.app.message.broadcast.BroadcastReceiverImpl"
            android:exported="true">
            <intent-filter>
                <action android:name="com.proxy.service.core.framework.Event" />
            </intent-filter>
        </receiver>

    </application>

</manifest>