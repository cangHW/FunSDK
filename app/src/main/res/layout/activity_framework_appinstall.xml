<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/get_pkg_from_apk"
                style="@style/button_style"
                android:text="从Apk获取对应包名" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/get_all_installed"
                style="@style/button_style"
                android:text="获取全部安装应用并打印" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/check_is_installed"
                style="@style/button_style"
                android:text="检查对应包名应用是否安装" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/receiver_apk_install_status"
                style="@style/button_style"
                android:text="监听应用安装事件" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/install_app"
                style="@style/button_style"
                android:text="安装应用" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/uninstall_app"
                style="@style/button_style"
                android:text="卸载应用" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/open_installed_app"
                style="@style/button_style"
                android:text="打开已安装应用" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.proxy.service.testview.DemoTestView
            android:id="@+id/content"
            style="@style/content_style" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>