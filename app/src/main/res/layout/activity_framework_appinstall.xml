<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/get_pkg_from_apk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#330000ff"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="从Apk获取对应包名"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/get_all_installed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#330000ff"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="获取全部安装应用并打印"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/check_is_installed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#330000ff"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="检查对应包名应用是否安装"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/receiver_apk_install_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#330000ff"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="监听应用安装事件"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/install_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#330000ff"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="安装应用"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/uninstall_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#330000ff"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="卸载应用"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/open_installed_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#330000ff"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="打开已安装应用"
                android:textSize="20dp" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.proxy.service.testview.DemoTestView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="500dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>