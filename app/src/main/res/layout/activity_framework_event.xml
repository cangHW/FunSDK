<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <CheckBox
                android:id="@+id/check_broadcast"
                style="@style/checkbox_style"
                android:text="配置广播回调" />

            <CheckBox
                android:id="@+id/check_event"
                style="@style/checkbox_style"
                android:text="配置event消息回调" />

            <CheckBox
                android:id="@+id/check_content_provider"
                style="@style/checkbox_style"
                android:text="配置ContentProvider消息回调" />

            <CheckBox
                android:id="@+id/check_process"
                style="@style/checkbox_style"
                android:text="配置Process消息回调" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/send_broadcast_msg"
                style="@style/button_style"
                android:text="发送广播消息" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/send_main_event_msg"
                style="@style/button_style"
                android:text="发送主线程 event 消息" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/send_thread_event_msg"
                style="@style/button_style"
                android:text="发送子线程 event 消息" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/send_content_provider_msg"
                style="@style/button_style"
                android:text="发送 ContentProvider 消息" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/send_process_sync_msg"
                style="@style/button_style"
                android:text="发送 Process 同步消息" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/send_process_async_msg"
                style="@style/button_style"
                android:text="发送 Process 异步消息" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.proxy.service.testview.DemoTestView
            android:id="@+id/content"
            style="@style/content_style" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>