<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <CheckBox
                android:id="@+id/check_screen_mode"
                style="@style/checkbox_style"
                android:text="监听横竖屏变化" />

            <CheckBox
                android:id="@+id/check_screen_rotation"
                style="@style/checkbox_style"
                android:text="监听屏幕旋转" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/screen_width"
                style="@style/button_style"
                android:text="屏幕宽高" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/screen_real_size"
                style="@style/button_style"
                android:text="屏幕真实信息" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/status_bar_height"
                style="@style/button_style"
                android:text="状态栏高度" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/navigation_bar_height"
                style="@style/button_style"
                android:text="导航栏高度" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/action_bar_height"
                style="@style/button_style"
                android:text="标题栏高度" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/screen_mode"
                style="@style/button_style"
                android:text="横竖屏状态" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/screen_rotation"
                style="@style/button_style"
                android:text="屏幕旋转角度" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.proxy.service.testview.DemoTestView
            android:id="@+id/content"
            style="@style/content_style" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>