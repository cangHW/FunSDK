<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/run_normal_task"
                style="@style/button_style"
                android:text="运行普通任务" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/run_block_task"
                style="@style/button_style"
                android:text="运行阻塞任务" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/run_delay_task"
                style="@style/button_style"
                android:text="运行延迟任务" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/run_interval_task"
                style="@style/button_style"
                android:text="运行循环任务" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cancel_interval_task"
                style="@style/button_style"
                android:text="取消循环任务" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/run_repeat_task"
                style="@style/button_style"
                android:text="运行重复任务" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/run_handler_task"
                style="@style/button_style"
                android:text="运行单线程任务" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.proxy.service.testview.DemoTestView
            android:id="@+id/content"
            style="@style/content_style" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>