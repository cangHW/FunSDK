<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/monitor_start"
                style="@style/button_style"
                android:text="监控开始" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/monitor_reset"
                style="@style/button_style"
                android:text="监控重置" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/monitor_stop"
                style="@style/button_style"
                android:text="监控暂停" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/monitor_destroy"
                style="@style/button_style"
                android:text="监控关闭" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_visible"
                style="@style/button_style"
                android:text="view 显示" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_gone"
                style="@style/button_style"
                android:text="view 隐藏" />
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/check_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:gravity="center"
            android:padding="10dp"
            android:text="测试显示状态 View"
            android:textSize="20dp" />

        <com.proxy.service.testview.DemoTestView
            android:id="@+id/content"
            style="@style/content_style" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>