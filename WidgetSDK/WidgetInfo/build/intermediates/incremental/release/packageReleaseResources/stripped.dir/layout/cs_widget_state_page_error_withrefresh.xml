<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cs_state_page_error_icon"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:src="@drawable/cs_widget_state_page_empty" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cs_state_page_error_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:text="网络错误"
            android:textColor="#99000000"
            android:textSize="18sp" />

        <com.proxy.service.widget.info.view.CsRoundLayout
            android:layout_width="154dp"
            android:layout_height="56dp"
            android:layout_marginTop="28dp"
            android:background="#3C91FF"
            app:round_radius="12dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cs_state_page_error_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="网络设置"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </com.proxy.service.widget.info.view.CsRoundLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>